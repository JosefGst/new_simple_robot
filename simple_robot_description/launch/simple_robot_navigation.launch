<launch>
  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="map_file" default="$(find simple_robot_description)/maps/house_map.yaml"/>

  <!-- Really Usefull Robot -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find simple_robot_description)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find simple_robot_description)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <include file="$(find simple_robot_description)/launch/display.launch"/>
  </group>
  
</launch>
