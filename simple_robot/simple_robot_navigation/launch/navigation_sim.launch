<launch>
  <!-- gazebo -->
  <include file="$(find simple_robot_description)/launch/sim.launch"/>

  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="map_file" default="$(find simple_robot_navigation)/maps/turtle_home_map.yaml"/>

  <!-- Simple Robot -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find simple_robot_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find simple_robot_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="cmd_vel_topic" value="/simple_diff_drive_controller/cmd_vel"/>
  </include>

</launch>
